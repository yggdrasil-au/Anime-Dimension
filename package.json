{

    "name": "anime-dimension",
    "description": "a public database for western and eastern animated works including TV shows and movies, with user reviews, ratings, and recommendations, directly based on the anime-planet.com website",

    "version": "0.9.0",

    "type": "module",
    "private": true,

    "license": "Apache-2.0",
    "author": {
        "name": "Yggdrasil-au",
        "email": "",
        "url": "https://github.com/yggdrasil-au/Anime-Dimension"
    },
    "homepage": "https://anime-dimension.com",

    "style": "www/dist/css/main.css",
    "sass": "source/scss/main.scss",
    "main": "www/dist/js/main.js",
    "keywords":[],
    "files":[],
    "exports":null,

    "repository": {
        "type": "git",
        "url": "git+https://github.com/yggdrasil-au/Anime-Dimension.git"
    },
    "github": {
        "owner": "yggdrasil-au",
        "repo": "Anime-Dimension",
        "url": "https://github.com/yggdrasil-au/Anime-Dimension"
    },

    "bugs": {
        "url": "https://github.com/yggdrasil-au/Anime-Dimension/issues",
        "email": ""
    },

    "funding": {
        "type": "",
        "url": ""
    },

    "buildConfig": {
        "banner": "/*!\n * Anime-Dimension v${version} (${homepage})\n * Copyright 2025-${year} ${author}\n * Licensed under ${license} (${github.url}/blob/main/LICENSE)\n */"
    },

    "scripts": {

        "webp": "ygg-webp",
        "appAssetsGen": "node ../../../Tools/capacitor-assets/bin/capacitor-assets generate --android --pwa --pwaOutRoot source/web/ --pwaIconsPath manifest/icons --pwaManifestPath source/web/site.webmanifest --assetPath resources/pwa-capacitor",

        "dev": "npm-run-all build dev-apache-watch",
            "dev-apache-watch": "npm-run-all --parallel watch dev-apache-server",
            "dev-apache-server": "powershell -Command wlampctl.exe apache start --output --DocumentRoot A:\\WebDev\\Sites\\Anime-Dimension\\main\\www\\website --port 8080",
            "dev-apache-server-status": "powershell -Command wlampctl.exe apache status",

        "capSync": "npx cap sync",

        "build:php": "build-php full",
            "php:prebuild": "build-php pre",
            "php:postbuild": "build-php post",

        "production": "npm-run-all clean appAssetsGen lint compile capSync",
        "build": "npm-run-all clean compile",
            "compile": "npm-run-all compile-parallel assets:prepare docs-compile docs-format move-astro-output-to-dist assets:handle",
                "compile-parallel": "npm-run-all --parallel css js",

            "css": "npm-run-all css-compile css-prefix css-rtl css-minify",
                "css-compile": "sass --style expanded --load-path=\"node_modules\" --source-map --embed-sources --no-error-css --quiet source/scss/:www/dist/css/",
                "css-rtl": "cross-env NODE_ENV=RTL postcss --config buildConfig/postcss.config.mjs --dir \"www/dist/css\" --ext \".rtl.css\" \"www/dist/css/*.css\" \"!www/dist/css/*.min.css\" \"!www/dist/css/*.rtl.css\"",
                "css-lint": "stylelint \"source/scss/**/*.scss\" --cache --cache-location .cache/.stylelintcache --rd",
                "css-minify": "npm-run-all --aggregate-output --parallel css-minify-*",
                "css-minify-main": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output www/dist/css/ --batch --batch-suffix \".min\" \"www/dist/css/*.css\" \"!www/dist/css/*.min.css\" \"!www/dist/css/*rtl*.css\"",
                "css-minify-rtl": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output www/dist/css/ --batch --batch-suffix \".min\" \"www/dist/css/*rtl.css\" \"!www/dist/css/*.min.css\"",
                "css-prefix": "postcss --config buildConfig/postcss.config.mjs --replace \"www/dist/css/*.css\" \"!www/dist/css/*.rtl*.css\" \"!www/dist/css/*.min.css\"",
            "js": "npm-run-all js-compile js-minify",
                "js-compile": "ts-builder",
                "js-lint": "eslint --format=stylish .",
                "js-minify": "js-minify --inputDir www",
            "docs-compile": "astro --config buildConfig/astro.config.mjs build",
                "docs-lint": "astro --config buildConfig/astro.config.mjs check",
                "docs-format": "prettier --write \"www/dist/**/*.html\"",

        "clean": "rimraf www/",

        "bundlewatch": "bundlewatch --config .bundlewatch.config.json",

        "move-astro-output-to-dist": "shx cp -r www/dist/astrobuild/* www/dist/ && shx rm -rf www/dist/astrobuild",
        "assets:prepare": "node scripts/asset-handler.mjs --prepare",
        "lint": "npm-run-all --aggregate-output --continue-on-error --parallel js-lint css-lint docs-lint",

        "assets:handle": "node scripts/asset-handler.mjs --split",
        "deploy:check": "deploy --check",

        "watch": "node scripts/watch-updates.mjs",


        "deploy-prod": "npm run ww-d && npm run api-d",
            "ww-d": "npm-run-all production deploy:www",
            "api-d": "npm-run-all dotnet:build-release-linux deploy:cs",
            "deploy:sftp": "deploy",
            "deploy:cs": "deploy --cs",
            "deploy:www": "deploy --www",

        "update-api-www-no-build": "node scripts/asset-handler.mjs --update-api",
        "update-api-www": "npm run compile && npm run update-api-www-no-build",
        "dotnet:run": "cd subModules/Anime-Dimension-api && dotnet run -c Debug --project ./ASP.NETCoreWebApi.csproj --framework net10.0",
        "dotnet:build-release-linux": "npm run update-api-www-no-build && cd subModules/Anime-Dimension-api && rimraf ../publish/linux-x64 && dotnet publish ./ASP.NETCoreWebApi.csproj -c Release -f net10.0 -r linux-x64 --self-contained true -p:PublishSingleFile=true -p:PublishTrimmed=true -p:IncludeAllContentForSelfExtract=true -o ../publish/linux-x64",
        "dotnet:build-release-win": "npm run update-api-www && cd subModules/Anime-Dimension-api && rimraf ../publish/win-x64 && dotnet publish ./ASP.NETCoreWebApi.csproj -c Release -f net10.0 -r win-x64 --self-contained true -p:PublishSingleFile=true -p:PublishTrimmed=true -p:IncludeAllContentForSelfExtract=true -o ../publish/win-x64",
        "dotnet:build-debug-all": "npm run update-api-www && cd subModules/Anime-Dimension-api && rimraf ../publish/debug && dotnet publish ./ASP.NETCoreWebApi.csproj -c Debug -f net10.0 -o ../publish/debug"

    },

